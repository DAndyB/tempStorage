@model IEnumerable<AdvisorSideKickMVC.Models.AddPreferenceViewModel>

@{
    ViewBag.Title = "Add Preference";
}

<h2>Add Department Preference</h2>

@using (Html.BeginForm("AddDepartment", "Home", FormMethod.Post))
{
    <form asp-controller="Home" asp-action="@Url.Action("AddDepartmentPreference")" method="post">
        <div class="form-horizontal">
            <div class="form-group">
                <label for="DepartmentId" class="control-label col-md-2">Select a Department:</label>
                <div class="col-md-10"> 
                    <select name="DepartmentId" id="DepartmentId" class="form-control">
                        @foreach (var department in Model)
                        {
                            <option value="@department.DepartmentId">@department.DepartmentName,  @department.SchoolName</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="AddDepartmentPreference" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
